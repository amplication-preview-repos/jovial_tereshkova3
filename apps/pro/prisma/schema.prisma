datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model News {
  createdAt          DateTime       @default(now())
  description        String
  descriptionPreview String
  id                 String         @id @default(uuid())
  slug               String         @unique
  source             EnumNewsSource
  sourceUrl          String?
  tags               String?
  tanant             EnumNewsTanant
  title              String
  updatedAt          DateTime       @updatedAt
}

enum EnumNewsSource {
  PROTANKI
  LESTA
  WARGAMING
  OTHER
}

enum EnumNewsTanant {
  RU
  Eu
  ALL
}
